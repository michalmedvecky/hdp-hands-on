[Unit]
Description=HDFS DataNode
After=network.target

[Service]
Type=simple
User=hdfs
Environment=HADOOP_LOG_DIR=/var/log/hdfs HADOOP_LOGFILE=hdfs-datanode.log HADOOP_ROOT_LOGGER=INFO,RFA HADOOP_SECURITY_LOGGER=INFO,RFAS JAVA_HOME={{ java_home }}
ExecStart=/bin/hdfs datanode
Restart=on-abort

[Install]
WantedBy=multi-user.target

